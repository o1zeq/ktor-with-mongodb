<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="top.dedicado" level="DEBUG"/>

    <!-- MongoDB -->
    <logger name="org.mongodb.driver" level="INFO"/>
    <logger name="org.bson" level="INFO"/>

    <!-- Firebase -->
    <logger name="com.google.firebase" level="INFO"/>

    <!-- AWS -->
    <logger name="aws.sdk.kotlin.core" level="INFO"/>

    <!-- Ktor -->
    <logger name="io.ktor" level="INFO"/>
    <logger name="org.slf4j" level="INFO"/>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="org.eclipse.jetty.server" level="INFO"/>

    <!-- Koin -->
    <logger name="org.koin" level="INFO"/>
    <logger name="io.insert-koin" level="INFO"/>

    <!-- Logback -->
    <logger name="ch.qos.logback" level="INFO"/>
    <logger name="ch.qos.logback.classic" level="INFO"/>
    <logger name="ch.qos.logback.core" level="INFO"/>
    <logger name="ch.qos.logback.core.util" level="INFO"/>
    <logger name="ch.qos.logback.core.status" level="INFO"/>

    <!-- Kotlin -->
    <logger name="org.jetbrains.kotlin" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>